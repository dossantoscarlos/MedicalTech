{
  "preset": "psr12",
  "rules": {
    "simplified_null_return": true,
    "single_quote": true,
    "array_indentation": true,
    "new_with_parentheses": {
      "anonymous_class": true,
      "named_class": true
    },
    "array_syntax": {
      "syntax": "short"
    },
    "declare_strict_types": true,
    "ordered_imports": {
      "sort_algorithm": "alpha"
    },
    "no_unused_imports": true
  }
}
